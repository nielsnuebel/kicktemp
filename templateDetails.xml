<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	
	<name>kickstart</name><!-- name the template -->
	<creationDate>xxxx-xx-xx</creationDate><!-- the date your are beginn to code -->
	<author>your name</author><!-- your name (oops, I repeat myself) -->
	<copyright>Copyright Â© xxxx example.com</copyright><!-- for who you are coding -->
	<authorEmail>your.name@example.com</authorEmail><!-- your email address -->
	<authorUrl>http://www.example.com</authorUrl><!-- your url -->
	<version>1.0.0</version><!-- give your template a number -->
	<description><![CDATA[ 
		<h1>kickstart</h1>
		<p><img src="../templates/kickstart/template_preview.png" /></p>
		<h2>Module positions</h2>
		<ol>
            <li>menu</li>
            <li>logo</li>
            <li>top</li>
            <li>inner-top</li>
            <li>sidebar-a</li>
            <li>sidebar-b</li>
            <li>inner-bottom</li>
            <li>bottom</li>
            <li>footer</li>
            <li>debug</li>
		</ol>
		<p>Created by <a href="http://www.example.com" target="_blank">your name | example.com</a>.</p>
	]]></description><!-- change the description as you like -->
	
	<files><!-- no need to change -->
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>less</folder>
		<folder>include</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>logic.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<languages folder="language"><!-- no need to change -->
		<language tag="de-DE">de-DE.tpl_kickstart.ini</language>
		<language tag="en-GB">en-GB.tpl_kickstart.ini</language>
	</languages>
	
	<positions><!-- define the positions for modules here -->
        <position>menu</position>
        <position>logo</position>
        <position>top</position>
        <position>inner-top</position>
        <position>sidebar-a</position>
        <position>sidebar-b</position>
        <position>inner-bottom</position>
        <position>bottom</position>
        <position>footer</position>
        <position>debug</position>
	</positions>
	
	<config><!-- no need to change -->
		<fields name="params">

			<fieldset name="advanced">

				<!-- MODERNIZR-->
				<field  name="modernizr"
                        type="radio"
                        class="btn-group"
                        default="0"
			            label="TPL_KICKSTART_PARAMETER_MODERNIZR_LABEL"
					    description="TPL_KICKSTART_PARAMETER_MODERNIZR_DESC"
                        >
				    <option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<!-- CSS METHOD -->
				<field  name="cssmethod"
                        type="radio"
                        class="btn-group"
                        default="css"
					    label="TPL_KICKSTART_PARAMETER_CSSMETHOD_LABEL"
					    description="TPL_KICKSTART_PARAMETER_CSSMETHOD_DESC"
                        >
					<option value="css">CSS (default)</option>
					<option value="min">CSS (minified)</option>
				</field>

				<!-- BOOTSTRAP -->
				<field  name="bootstrap"
                        type="radio"
                        class="btn-group"
                        default="0"
					    label="TPL_KICKSTART_PARAMETER_BOOTSTRAP_LABEL"
					    description="TPL_KICKSTART_PARAMETER_BOOTSTRAP_DESC"
                        >
					<option value="0">JNO</option>
                    <option value="1">Bootstrap (Template)</option>
				</field>

                <!-- BOOTSTRAP-RESPONSIVE -->
                <field  name="bootstrapmenu"
                        type="radio"
                        class="btn-group"
                        default="1"
                        label="TPL_KICKSTART_PARAMETER_BOOTSTRAP_DROPDOWN_LABEL"
                        description="TPL_KICKSTART_PARAMETER_BOOTSTRAP_DROPDOWN_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- META-VIEWPORT -->
                <field  name="meta-viewport"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKSTART_PARAMETER_META_VIEWPORT_LABEL"
                        description="TPL_KICKSTART_PARAMETER_META_VIEWPORT_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

				<!-- FONT-AWESOME -->
				<field  name="fontawesome"
                        type="radio"
                        class="btn-group"
                        default="0"
					    label="TPL_KICKSTART_PARAMETER_FONTAWESOME_LABEL"
					    description="TPL_KICKSTART_PARAMETER_FONTAWESOME_DESC"
                        >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<!-- JQUERY -->
				<field  name="jquery"
                        type="radio"
                        class="btn-group"
                        default="0"
					    label="TPL_KICKSTART_PARAMETER_JQUERY_LABEL"
					    description="TPL_KICKSTART_PARAMETER_JQUERY_DESC"
                        >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

                <!-- JQUERY FIRST -->
                <field  name="loadjqueryfirst"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKSTART_PARAMETER_LOADJQUERYFIRST_LABEL"
                        description="TPL_KICKSTART_PARAMETER_LOADJQUERYFIRST_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

				<!-- PIE-->
				<field  name="pie"
                        type="radio"
                        class="btn-group"
                        default="0"
					    label="TPL_KICKSTART_PARAMETER_PIE_LABEL"
					    description="TPL_KICKSTART_PARAMETER_PIE_DESC"
                        >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

                <!-- Holder.js-->
                <field  name="holder"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKSTART_PARAMETER_HOLDER_LABEL"
                        description="TPL_KICKSTART_PARAMETER_HOLDER_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- GOOGLE FONT-->
                <field  name="googlefont"
                        class=""
                        type="text"
                        default=""
                        label="TPL_KICKSTART_PARAMETER_GOOGLEFONT_LABEL"
                        description="TPL_KICKSTART_PARAMETER_GOOGLEFONT_DESC"
                        />

                <!-- GOOGLE ANALYTICS -->
                <field  name="googleanalytics"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKSTART_PARAMETER_GOOGLEANALYTICS_LABEL"
                        description="TPL_KICKSTART_PARAMETER_GOOGLEANALYTICS_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- GOOGLE ANALYTICS CODE-->
                <field  name="googleanalyticscode"
                        class=""
                        type="text"
                        default=""
                        label="TPL_KICKSTART_PARAMETER_GOOGLEANALYTICS_CODE_LABEL"
                        description="TPL_KICKSTART_PARAMETER_GOOGLEANALYTICS_CODE_DESC"
                        />

				<!-- Disable JavaScript -->
				<field  name="disablejs"
                        type="radio"
                        class="btn-group"
                        default="0"
					    label="TPL_KICKSTART_PARAMETER_DISABLEJS_LABEL"
					    description="TPL_KICKSTART_PARAMETER_DISABLEJS_DESC"
                        >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<!-- JavaScript Files -->
				<field  name="fnjs"
                        type="textarea"
					    label="TPL_KICKSTART_PARAMETER_FNJS_LABEL"
					    description="TPL_KICKSTART_PARAMETER_FNJS_LABEL"
					    cols="30"
                        default="mootools-core.js,caption.js"
                        rows="4"
                        />

				<!-- Disable CSS -->
				<field  name="disablecss"
                        type="radio"
                        class="btn-group"
                        default="0"
					    label="TPL_KICKSTART_PARAMETER_DISABLECSS_LABEL"
					    description="TPL_KICKSTART_PARAMETER_DISABLECSS_DESC"
                        >
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
				</field>

				<!-- CSS Files -->
				<field  name="fncss"
                        type="textarea"
					    label="TPL_KICKSTART_PARAMETER_FNCSS_LABEL"
					    description="TPL_KICKSTART_PARAMETER_FNCSS_DESC"
					    cols="30"
                        rows="4"
                        />

			</fieldset>
		</fields>
	</config>
	
</extension>
