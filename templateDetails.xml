<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	
	<name>kicktemp</name><!-- name the template -->
	<creationDate>xxxx-xx-xx</creationDate><!-- the date your are beginn to code -->
	<author>your name</author><!-- your name (oops, I repeat myself) -->
	<copyright>Copyright Â© xxxx example.com</copyright><!-- for who you are coding -->
	<authorEmail>your.name@example.com</authorEmail><!-- your email address -->
	<authorUrl>http://www.example.com</authorUrl><!-- your url -->
	<version>1.0.0</version><!-- give your template a number -->
	<description><![CDATA[ 
		<h1>kicktemp</h1>
		<p><img src="../templates/kicktemp/template_preview.png" /></p>
		<h2>Module positions</h2>
		<ol>
            <li>onepage</li>
            <li>logo</li>
            <li>menu</li>
            <li>top</li>
            <li>sidebar-a</li>
            <li>inner-top</li>
            <li>inner-bottom</li>
            <li>sidebar-b</li>
            <li>bottom</li>
            <li>footer</li>
            <li>debug</li>
		</ol>
		<p>Created by <a href="http://www.example.com" target="_blank">your name | example.com</a>.</p>
	]]></description><!-- change the description as you like -->
	
	<files><!-- no need to change -->
		<folder>codekit</folder>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<filename>component.php</filename>
		<filename>config.codekit</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>index_multipage.php</filename>
		<filename>index_onepage.php</filename>
		<filename>magic.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<positions><!-- define the positions for modules here -->
        <position>onepage</position>
        <position>onepagebottom</position>
        <position>logo</position>
        <position>menu</position>
        <position>search</position>
        <position>top</position>
        <position>inner-top</position>
        <position>sidebar-a</position>
        <position>sidebar-b</position>
        <position>inner-bottom</position>
        <position>bottom</position>
        <position>footer</position>
        <position>debug</position>
	</positions>
	
	<config><!-- no need to change -->
		<fields name="params">

			<fieldset name="advanced">

                <!-- CODEKIT -->
                <field  name="codekit"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_CODEKIT_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_CODEKIT_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- SHOWSYSTEMOUTPUT -->
                <field  name="showsystemoutput"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_SHOWSYSTEMOUTPUT_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SHOWSYSTEMOUTPUT_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- SHOWONFRONTPAGE -->
                <field  name="hidecontentwrapper"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_HIDECONTENTWRAPPER_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_HIDECONTENTWRAPPER_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- PAGETYPE -->
                <field  name="pagetype"
                        type="radio"
                        class="btn-group"
                        default="multipage"
                        label="TPL_KICKTEMP_PARAMETER_PAGETYPE_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_PAGETYPE_DESC"
                        >
                    <option value="onepage">TPL_KICKTEMP_PARAMETER_ONEPAGE</option>
                    <option value="multipage">TPL_KICKTEMP_PARAMETER_MULTIPAGE</option>
                </field>

                <!-- SIDEBAR A -->
                <field  name="sidebar-a"
                        class=""
                        type="text"
                        default="col-md-4"
                        label="TPL_KICKTEMP_PARAMETER_SIDEBAR_A_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SIDEBAR_A_DESC"
                        />

                <!-- SIDEBAR B -->
                <field  name="sidebar-b"
                        class=""
                        type="text"
                        default="col-md-4"
                        label="TPL_KICKTEMP_PARAMETER_SIDEBAR_B_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SIDEBAR_B_DESC"
                        />

                <!-- CONTENT 2 -->
                <field  name="content-2-col"
                        class=""
                        type="text"
                        default="col-md-8"
                        label="TPL_KICKTEMP_PARAMETER_CONTENT_2_COL_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_CONTENT_2_COL_DESC"
                        />

                <!-- CONTENT 3 -->
                <field  name="content-3-col"
                        class=""
                        type="text"
                        default="col-md-4"
                        label="TPL_KICKTEMP_PARAMETER_CONTENT_3_COL_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_CONTENT_3_COL_DESC"
                        />

				<!-- MODERNIZR-->
				<field  name="modernizr"
                        type="radio"
                        class="btn-group"
                        default="0"
			            label="TPL_KICKTEMP_PARAMETER_MODERNIZR_LABEL"
					    description="TPL_KICKTEMP_PARAMETER_MODERNIZR_DESC"
                        >
				    <option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<!-- BOOTSTRAP -->
				<field  name="bootstrap"
                        type="radio"
                        class="btn-group"
                        default="0"
					    label="TPL_KICKTEMP_PARAMETER_BOOTSTRAP_LABEL"
					    description="TPL_KICKTEMP_PARAMETER_BOOTSTRAP_DESC"
                        >
					<option value="0">JNO</option>
                    <option value="1">Bootstrap (Template)</option>
				</field>

                <!-- BOOTSTRAP-RESPONSIVE -->
                <field  name="bootstrapmenu"
                        type="radio"
                        class="btn-group"
                        default="1"
                        label="TPL_KICKTEMP_PARAMETER_BOOTSTRAP_DROPDOWN_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_BOOTSTRAP_DROPDOWN_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- META-VIEWPORT -->
                <field  name="meta-viewport"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_META_VIEWPORT_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_META_VIEWPORT_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

				<!-- FONT-AWESOME -->
				<field  name="fontawesome"
                        type="radio"
                        class="btn-group"
                        default="0"
					    label="TPL_KICKTEMP_PARAMETER_FONTAWESOME_LABEL"
					    description="TPL_KICKTEMP_PARAMETER_FONTAWESOME_DESC"
                        >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

                <!-- Holder.js-->
                <field  name="holder"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_HOLDER_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_HOLDER_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- GOOGLE FONT-->
                <field  name="googlefont"
                        class=""
                        type="text"
                        default=""
                        label="TPL_KICKTEMP_PARAMETER_GOOGLEFONT_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLEFONT_DESC"
                        />

                <!-- GOOGLE ANALYTICS -->
                <field  name="googleanalytics"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- GOOGLE ANALYTICS CODE-->
                <field  name="googleanalyticscode"
                        class=""
                        type="text"
                        default=""
                        label="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_CODE_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_CODE_DESC"
                        />
                <!-- GOOGLE ANALYTICS CODE-->
                <field  name="googleanalyticsdomain"
                        class=""
                        type="text"
                        default=""
                        label="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_DOMAIN_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_DOMAIN_DESC"
                        />

				<!-- Disable JavaScript -->
				<field  name="disablejs"
                        type="radio"
                        class="btn-group"
                        default="0"
					    label="TPL_KICKTEMP_PARAMETER_DISABLEJS_LABEL"
					    description="TPL_KICKTEMP_PARAMETER_DISABLEJS_DESC"
                        >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<!-- JavaScript Files -->
				<field  name="fnjs"
                        type="textarea"
					    label="TPL_KICKTEMP_PARAMETER_FNJS_LABEL"
					    description="TPL_KICKTEMP_PARAMETER_FNJS_LABEL"
					    cols="30"
                        default="mootools-core.js,caption.js"
                        rows="4"
                        />

				<!-- Disable CSS -->
				<field  name="disablecss"
                        type="radio"
                        class="btn-group"
                        default="0"
					    label="TPL_KICKTEMP_PARAMETER_DISABLECSS_LABEL"
					    description="TPL_KICKTEMP_PARAMETER_DISABLECSS_DESC"
                        >
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
				</field>

				<!-- CSS Files -->
				<field  name="fncss"
                        type="textarea"
					    label="TPL_KICKTEMP_PARAMETER_FNCSS_LABEL"
					    description="TPL_KICKTEMP_PARAMETER_FNCSS_DESC"
					    cols="30"
                        rows="4"
                        />

			</fieldset>
		</fields>
	</config>
	
</extension>
